<% content_for(:title) do %>
  <%= @animal.name + ' | Wildlife Tracker' %>
<% end %>
<h1><%= @animal.name %></h1>

<p><%= link_to "Edit", edit_animal_path(@animal) %></p>
<p><%= link_to "Delete", animal_path(@animal),
                        :data => {:confirm => "Are you sure you'd like to delete this animal?",
                        :method => "delete"} %> </p>
<p><%= link_to "Return to the list of animals", animals_path %></p>
